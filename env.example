# Supabase Configuration (Frontend - Vite)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Configuration (Backend - Server)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google reCAPTCHA Configuration
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Development: Disable reCAPTCHA for localhost (set to 'true' to bypass reCAPTCHA on localhost)
DISABLE_RECAPTCHA_LOCALHOST=true
VITE_DISABLE_RECAPTCHA_LOCALHOST=true

# Email SMTP Configuration
EMAIL_USER=support@andiamoevents.com
EMAIL_PASS=your_email_password_here
EMAIL_HOST=mail.routing.net
EMAIL_PORT=587

# Server Configuration
PORT=8082
JWT_SECRET=your-secret-jwt-key-here

# WinSMS API Configuration (Optional - for SMS marketing features)
WINSMS_API_KEY=your_winsms_api_key_here
# TEST_PHONE=27169458  # Optional: Phone number for SMS testing (8 digits, starting with 2, 4, 5, or 9)

# Flouci Payment API Configuration (Backend only - secret key never exposed to frontend)
FLOUCI_PUBLIC_KEY=your_flouci_public_key_here
FLOUCI_SECRET_KEY=your_flouci_secret_key_here

# Public URL for Payment Callbacks (Required for Flouci - must be HTTPS)
# 
# OPTIONAL - The app will auto-detect HTTPS URLs in these cases:
# - Vercel preview/production deployments (automatic)
# - Any HTTPS origin (automatic)
#
# Only set this if you need to override the auto-detected URL, or for localhost development:
# - In production: https://yourdomain.com
# - For localhost: Use ngrok or similar tunnel service
#   Example: VITE_PUBLIC_URL=https://abc123.ngrok.io
#
# VITE_PUBLIC_URL=https://yourdomain.com

# Flouci Webhook Security (Optional - not provided by Flouci)
# FLOUCI_WEBHOOK_SECRET=your_custom_webhook_secret  # Optional: Generate your own random secret if you want extra security

# Security Monitoring & Alerts
# SECURITY_ALERT_EMAIL=admin@example.com  # Email to receive security alerts (optional)
# ENABLE_SECURITY_LOGGING=true  # Enable comprehensive request logging (optional, defaults to production only)